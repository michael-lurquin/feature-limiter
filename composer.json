{
    "name": "michael-lurquin/feature-limiter",
    "description": "A Laravel package to manage SaaS features, quotas and usage. Supports boolean features, numeric limits, storage, unlimited plans and period-based usage. Built for modern multi-tenant SaaS and flexible billing systems.",
    "keywords": ["laravel", "feature", "limiter", "saas", "plan", "subscriptions", "quota", "usage", "feature-flags", "billing", "limits"],
    "homepage": "https://github.com/michael-lurquin/feature-limiter",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MichaÃ«l Lurquin",
            "email": "michael.lurquin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "illuminate/support": "^10.0 || ^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MichaelLurquin\\FeatureLimiter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MichaelLurquin\\FeatureLimiter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "MichaelLurquin\\FeatureLimiter\\FeatureLimiterServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
